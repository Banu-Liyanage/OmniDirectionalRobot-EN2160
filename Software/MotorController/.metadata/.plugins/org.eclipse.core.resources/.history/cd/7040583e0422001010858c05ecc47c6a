/*
 * motors.c
 */

#include "main.h"
#include "motors.h"

float limitPWM(float pwm) {
	if (pwm > PWM_MAX)
		return PWM_MAX;
	else if (pwm < -PWM_MAX)
		return -PWM_MAX;
	return pwm;
}




void setMotorPWM(float pwm) {
	if (pwm >= 0) {
		TIM4->CCR1 = (uint32_t) (limitPWM(pwm) * MAX_TIMER_COUNTS);
	}
	else if (pwm < 0) {
		TIM4->CCR1 = (uint32_t) (-1 * limitPWM(pwm) * MAX_TIMER_COUNTS);
	}
}


void resetMotors() {
	setMotorPWM(0);
}
